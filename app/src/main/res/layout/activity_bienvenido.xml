<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Bienvenido">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="75dp"
            android:scaleType="matrix"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="150dp"
                android:fontFamily="sans-serif-condensed"
                android:text="BIENVENIDO A"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="20dp"
                android:text="Elige la cuenta con la que quieres ingresar. Si eres socio STOCKTAKING TECH, le recomendamos ingresar con el correo vinculado o la cuenta para tener permisos de administrativo y tener una mejor experiencia"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnRecuperar"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:text="Continuar con Google" />

            <Button
                android:id="@+id/btnIngresarLogin"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="118dp"
                android:text="Iniciar sesion" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="118dp"
                android:text="Registrarme" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>