<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#EF0606"
    tools:context=".View.RegistroUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="48dp"
            android:text="Crear usuario"
            android:textAlignment="center"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/txtIdentificacionReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Numero identificacion"
            android:inputType="number"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            tools:inputType="numberSigned" />

        <EditText
            android:id="@+id/txtNombresReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Nombres"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            tools:minHeight="48dp" />

        <EditText
            android:id="@+id/txtApellidosReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/txtEmailReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Correo electronico"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/txtTelefonoReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Telefono"
            android:inputType="number"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            tools:inputType="numberSigned" />

        <EditText
            android:id="@+id/txtDireccionReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Direcci칩n"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textAlignment="viewStart" />

        <EditText
            android:id="@+id/txtContrasenaReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            tools:inputType="textVisiblePassword" />

        <EditText
            android:id="@+id/txtConfirmContrase침aReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Confirmar contrase침a"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textAlignment="viewStart"
            tools:inputType="textVisiblePassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRegresarReg"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#DA3535"
                android:backgroundTintMode="add"
                android:text="Ya tengo cuenta"
                tools:cornerRadius="10dp" />

            <Button
                android:id="@+id/btnCrearReg"
                android:layout_width="187dp"
                android:layout_height="51dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="150dp"
                android:width="10sp"
                android:text="Crear cuenta"
                tools:cornerRadius="10dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>